<h1>New Game</h1>
<div class="flex">
  <% @letters.each do |letter| %>
  <div class="letter">
    <p><%= letter %></p>
  </div>
  <% end %>

</div>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="answer" placeholder="Your longest word">
<!--   # <input id="letters" type="hidden" name="letters" value=<%="#{@letters}"%> /> -->
  <input type="submit" name="submit">
</form>


